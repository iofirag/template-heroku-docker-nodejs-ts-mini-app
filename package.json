{
  "name": "docker_node_app",
  "version": "1.0.0",
  "description": "nodejs image demo",
  "author": "your name",
  "license": "MIT",
  "main": "app.js",
  "keywords": [],
  "scripts": {
    "------production------": "",
    "start": "ts-node server.ts",
    "start-js": "node index.js",

    "------development------": "",
    "---working-docker-online---": "",
    "dev:hot-reload": "nodemon -L --exec ts-node server.ts",
    "dev:hot-reload:debug": "nodemon -L --exec node --inspect=0.0.0.0:9229 -r ts-node/register server.ts",
    "dev:hot-reload:debug:wait": "nodemon -L --exec node --inspect-brk=0.0.0.0:9229 -r ts-node/register server.ts",
    
    "---working-docker---": "",
    
    "---working-with-pure-node---": "",
    
    "---didnt-working---": "",
    "didnt-working:dev:hot-reload:debug:wait": "nodemon --exec 'ts-node --inspect-brk=0.0.0.0:9229 --require ts-node/register server.ts'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.8.7",
    "ts-node": "^8.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.5.41",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.5"
  }
}
